{  
    "settings":{  
        "number_of_shards":3,
        "number_of_replicas":2
    },
   "mappings":{  
       "review":{  
           "properties":{  
               "CourseId":{  
                   "type":"keyword"
               },
              "ReviewId":{  
                  "type":"keyword"
              },
              "ParentReviewId":{
                  "type":"keyword"
              },
              "UserId":{  
                   "type":"keyword"
              },
              "PostedBy":{
                "type":"text"
              },
              "PostedByInstructor":{  
                  "type":"boolean"
               },
              "Description":{  
                  "type":"text",
                  "analyzer":"standard"
              },
              "Edited":{  
                  "type":"boolean"
              },
              "NoofLikes":{
                  "type":"integer"
              },
              "NoofdisLikes":{
                "type":"integer"
            },
              "CommentedOn":{  
                "properties":{
                	"Date":{
                  "type":"date",
                  "format":"yyyy-MM-dd"
                 },
                "Time":{
                    "type":"date",
                    "format":"HH:mm:ss"
                  }
                 }
              },
              "EditedOn":{  
              	 "properties":{
                "Date":{
                    "type":"date",
                    "format":"yyyy-MM-dd"
                },
                "Time":{
                      "type":"date",
                	   "format":"HH:mm:ss"
                }
              	 }
              }
           }
       }
   }
}